<?xml version="1.0" encoding="utf-8"?>
<Rule xmlns="http://schemas.microsoft.com/build/2009/properties"
      Name="JsonResourceRule"
      DisplayName="Json Resource"
      PageTemplate="generic"
      Description="Json Resource.">
    <Rule.Categories>
        <Category Name="General" DisplayName="General" />
    </Rule.Categories>
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile" ItemType="JsonResource" />
    </Rule.DataSource>
    <StringProperty Name="Namespace" DisplayName="Namespace" />
    <StringProperty Name="ResourceName" DisplayName="Resource Name" />
    <EnumProperty Name="AccessModifier" DisplayName="Access Modifier">
        <EnumValue Name="Public" DisplayName="Public"/>
        <EnumValue Name="Internal" DisplayName="Internal"/>
        <EnumValue Name="NoCodeGen" DisplayName="No Code Generation"/>
    </EnumProperty>
</Rule>
