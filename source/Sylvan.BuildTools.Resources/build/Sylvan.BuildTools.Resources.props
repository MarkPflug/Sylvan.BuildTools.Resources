<?xml version="1.0" encoding="utf-8" ?>
<Project
	xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<SylvanResourceTaskAssembly Condition="'$(SylvanResourceTaskAssembly)' == ''">$(MSBuildThisFileDirectory)netstandard1.6\Sylvan.BuildTools.Resources.dll</SylvanResourceTaskAssembly>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<JsonResource>
			<Generator>MSBuild:GenerateJsonResource</Generator>
		</JsonResource>
		<StaticResourceFiles>
			<Generator>MSBuild:GenerateStaticResource</Generator>
		</StaticResourceFiles>
	</ItemDefinitionGroup>

	<ItemGroup>
		<None Remove="**/*.resj"/>
		<JsonResource Include="**/*.resj"/>
		
		<StaticResourceFolder
			Condition="Exists($(DefaultStaticResourceRoot))" 
			Include="$(DefaultStaticResourceRoot)"/>
		
		<StaticResourceFiles 
			Include="%(StaticResourceFolder)/**/*"/>
	</ItemGroup>

</Project>